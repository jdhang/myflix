= content_for :head do
  %script(src="https://js.stripe.com/v2/")
  :javascript
    Stripe.setPublishableKey('pk_test_RfMnxKgANu2mcesTks0IDMab')
  = javascript_include_tag 'payments'

%section.register.container
  .row
    .col-sm-10.col-sm-offset-1
      = bootstrap_form_for(@user, layout: :horizontal, label_col: "col-sm-2", control_col: "col-sm-6") do |f|
        %header
          %h1 Register
        %p.register-errors
        %fieldset
          = f.email_field :email
          = f.password_field :password
          = f.text_field :full_name, label: "Full Name"
          - if @id
            = f.hidden_field :t, value: @id
        %fieldset.credit_card
          .form-group
            %label.control-label.col-sm-2 Credit Card Number
            .col-sm-6
              %input.form-control#cc_number(type="text")
          .form-group
            %label.control-label.col-sm-2 Security Code
            .col-sm-6
              %input.form-control#cc_cvc(type="text")
          .form-group
            %label.control-label.col-sm-2 Expiration
            .col-sm-3
              = select_month(Date.today, {add_month_numbers: true}, name: nil, class: 'form-control', id: 'cc_exp_month')
            .col-sm-2
              = select_year(Date.today.year, {start_year: Date.today.year, end_year: Date.today.year + 4}, name: nil, class: 'form-control', id: 'cc_exp_year')
        %fieldset.actions.control-group.col-sm-offset-2
          .controls
            = f.submit 'Sign Up', class: 'btn btn-default register_submit'
