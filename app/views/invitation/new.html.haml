%section.invite.container
  .row
    .col-sm-10.col-sm-offset-1
      =form_for @invitation do |f|
        %header
          %h1 Invite a friend to join MyFlix!
        %fieldset
          .form-group
            %label Friend's Name
            .row
              .col-sm-4
                =f.text_field :name, class: "form-control"
          .form-group
            %label Friend's Email Address
            .row
              .col-sm-4
                =f.text_field :email, class: "form-control"
          .form-group
            %label Invitation Message
            .row
              .col-sm-6
                =f.text_area :message, value: "Please join this really cool site!", rows: 6, class: "form-control"
        %fieldset.form-group.action
          =f.submit "Send Invitation", class: "btn btn-default"
