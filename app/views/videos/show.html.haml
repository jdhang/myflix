%article.video
  .container
    .row
      .video_large_cover.col-sm-7.col-sm-offset-1
        %img(src="/tmp/monk_large.jpg")
      .video_info.col-sm-3
        %header
          %h3= @video.title
          %span
            Rating: 
            = @video.rating
        %p= @video.description
%section.reviews.container
  .row
    .col-sm-10.col-sm-offset-1
      = bootstrap_form_for([@video, @review]) do |f|
        %fieldset
          .form-group
            %label Rate this video
            .row
              .col-sm-3
                - ratings = [["5 Stars", 5],["4 Stars", 4],["3 Stars", 3],["2 Stars", 2],["1 Star", 1]]
                = f.select :rating, ratings, hide_label: true
          .form-group
            = f.label :review, "Write Review"
            .row
              .col-sm-8
                = f.text_area :body, hide_label: true, rows: "6", class: "form-control"
        %fieldset.form-group.actions.clearfix
          = f.submit "Submit", class: "btn"
          = link_to "Cancel", @video
      %header
        %h3
          User Reviews (#{@reviews.count})
      %ul
        - @reviews.each do |review|
          %article.review
            %li.row
              .col-sm-2
                %span
                  Rating: 
                  = "#{review.rating} / 5"
                %p
                  by
                  = link_to review.author.full_name, "#"
              .col-sm-8
                %p 
                  = review.body
